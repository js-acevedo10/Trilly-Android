<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.tresastronautas.trilly.AddGrupoListActivity"
    android:background="@drawable/addgrupo_imagen_bg">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addgroups_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin" />

    <TextView
        style="?android:attr/textAppearanceLarge"
        android:id="@+id/addgroups_text_groupname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/addgroups_fab"
        android:layout_centerHorizontal="true"
        android:text="@string/addgroups_title"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        app:layout_marginTopPercent="2%" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/addgroups_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/addgroups_fab"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

    </android.support.v7.widget.RecyclerView>

</android.support.percent.PercentRelativeLayout>
