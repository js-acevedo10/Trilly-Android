<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.tresastronautas.trilly.MainActivity">

    <!-- Imagen del Bosque de Arboles-->
    <ImageView
        android:id="@+id/bosque_de_arboles_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/bosquearbolpequenio"
        app:layout_heightPercent="60%"
        app:layout_widthPercent="100%" />

    <TextView
        android:id="@+id/label_nombre_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorPrimary" />

    <!-- Botón de Empezar Viaje-->
    <ImageButton
        android:id="@+id/boton_empezar_viaje_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bosque_de_arboles_main"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/empezar_viaje" />

    <!-- Layout de las estadísticas-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boton_empezar_viaje_main"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:textAlignment="center">

        <ImageButton
            android:id="@+id/boton_gas_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:paddingRight="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/gas" />

        <ImageButton
            android:id="@+id/boton_arboles_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/boton_gas_main"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:paddingRight="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/arboles_salvados" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/boton_arboles_main"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/continuar" />

    </RelativeLayout>



    <ImageView
        android:id="@+id/profileTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>

</android.support.percent.PercentRelativeLayout>
