<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/viajeslist_imagen_bg"
    tools:context="com.tresastronautas.trilly.ViajeListActivity">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/viajelist_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:onClick="groupListBack" />

    <TextView
        style="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/viajelist_fab"
        android:layout_centerHorizontal="true"
        android:text="@string/viajelist_title"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_marginTopPercent="2%" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/viajes_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        app:layout_marginTopPercent="13.73%">

    </android.support.v7.widget.RecyclerView>

</android.support.percent.PercentRelativeLayout>
